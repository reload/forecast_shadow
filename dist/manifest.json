{
  "manifest_version": 2,
  "name": "Forecast Shadow Booking",
  "description": "This extension will make shadowed bookings grey in the Harvest Forecast interface",
  "version": "0.6.0",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_scripts": [
    {
      "matches": ["https://forecastapp.com/*"],
      "all_frames": true,
      "css": [
        "style.css"
      ],
      "js": [
        "app.js"
      ]
    }
  ]
}
